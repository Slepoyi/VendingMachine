@using BLL.Dtos;

@{
    ViewData["Title"] = "Vending machine";
}

<div class="text-center">
    <h2 class="display-4">Welcome to our vending machine!</h2>
    <h2 style="font-weight:400">Choose a drink from the section below, insert coins and enjoy your drink!</h2>
</div>

<hr />

<div class="d-flex justify-content-center flex-wrap" id="divPartial">
    @await Html.PartialAsync("DrinksPartial")
</div>

<div class="text-center">
    <h2 class="display-5 text-success">
        <span id="drinksMessage"></span>
    </h2>
</div>

<hr />

<div class="d-block text-center">
    <h2>
        Current balance:
        <span id="balance">0</span>
    </h2>
</div>

<div class="d-flex justify-content-center">
    @foreach (var coin in ViewBag.Coins)
    {
        <div class="card">
            <div class="card-body d-flex flex-column" style="align-items: flex-start">
                <h4 class="card-title">
                    @coin.Value rub
                </h4>
                @{
                    var disabled =
                    !coin.IsAccepted
                    ? "disabled"
                    : null;
                    var coinValue = (int)coin.Value;
                }
                <a class="btn btn-outline-primary @disabled" style="margin-top: auto" onclick="addNRuble(@coinValue)">
                    Insert
                </a>
            </div>
        </div>
    }
</div>

<div class="d-flex flex-column justify-content-center align-items-center m-3">
    <a class="btn btn-outline-primary btn-lg" onclick="getChange()">
        Get change
    </a>
</div>

<hr />

<div class="text-center">
    <h2 class="display-5 text-success">
        <span id="changeMessage"></span>
    </h2>
</div>
